<div class="row">&nbsp;</div>
<div class="row">
    <div class="col-md-12">
        <h4>Dokumentuak</h4>
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Noiz</th>
                <th>Zerrenda</th>
                <th>Aurreko urrenkera</th>
                <th>Uneko urrenkera</th>
                <th>Aurreko egoera</th>
                <th>Egoera berria</th>
                <th>Dokumentua</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for ezt in ezts %}
                <tr>
                    <td>{{ ezt.created | date('Y-m-d h:m:s') }}</td>
                    <td>{{ ezt.zerrenda }}</td>
                    <td>{{ ezt.lastPosition }}</td>
                    <td>{{ ezt.currentPosition }}</td>
                    <td>{% if ezt.last %}
                            {{ ezt.last.name }}
                            {% else %}
                            ---
                        {% endif %}</td>
                    <td>{% if ezt.type %}{{ ezt.type.name }}{% else %}---{% endif %}</td>
                    <td>
                        {% if ezt.documentFile %}
                            <a href="{{ vich_uploader_asset(ezt,'documentFile') }}" target="_blank">Ikusi</a>
                        {% endif %}
                    </td>
                    <td>
                        <a class="btnZerrendaType"
                           data-employeeid="{{ ezt.employee.id }}"
                           data-zerrendaid="{{ ezt.zerrenda }}"
                           href="#">Egoera aldatu</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
